<Application x:Class="ScreenWarden.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:tb="http://www.hardcodet.net/taskbar"
             ShutdownMode="OnExplicitShutdown">

    <Application.Resources>

        <tb:TaskbarIcon x:Key="TrayIcon"
                        IconSource="/Assets/screenwarden.ico"
                        ToolTipText="ScreenWarden"
                        MenuActivation="RightClick">
            <!-- IconSource removed until valid .ico is available -->

            <tb:TaskbarIcon.ContextMenu>
                <ContextMenu x:Name="TrayMenu">
                    <MenuItem x:Name="TrayCaptureNow" Header="Capture Now"/>

                    <Separator/>

                    <MenuItem Header="Mode">
                        <MenuItem x:Name="TrayModeActive" Header="Active Window Monitor" IsCheckable="True"/>
                        <MenuItem x:Name="TrayModeMouse" Header="Mouse Cursor Monitor" IsCheckable="True"/>
                    </MenuItem>

                    <Separator/>

                    <MenuItem x:Name="TrayOpenSettings" Header="Open Settings"/>
                    <MenuItem x:Name="TrayExit" Header="Exit"/>
                </ContextMenu>
            </tb:TaskbarIcon.ContextMenu>

        </tb:TaskbarIcon>

    </Application.Resources>
</Application>
