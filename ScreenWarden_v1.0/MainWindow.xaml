<Window x:Class="ScreenWarden.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ScreenWarden Settings"
        Height="330" Width="520"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#0F0F10">

    <Window.Resources>
        <SolidColorBrush x:Key="CardBrush" Color="#17181A"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#2A2C2F"/>
        <SolidColorBrush x:Key="TextBrush" Color="#F2F2F2"/>
        <SolidColorBrush x:Key="SubTextBrush" Color="#B8B8B8"/>

        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource TextBrush}" />
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="Margin" Value="0,0,0,0"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Background" Value="#1E2023"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Background" Value="#1E2023"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="IsReadOnly" Value="True"/>
        </Style>

        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Background" Value="#2D6CDF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Background" Value="#2A2C2F"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>

    <Grid Margin="16">
        <Border Background="{StaticResource CardBrush}"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="1"
                CornerRadius="14"
                Padding="16">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="12"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="14"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="12"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0">
                    <TextBlock Text="ScreenWarden Settings" FontSize="18" FontWeight="SemiBold"/>
                    <TextBlock Text="Choose how screenshots are captured and where they’re saved."
                               Foreground="{StaticResource SubTextBrush}"
                               Margin="0,4,0,0"/>
                </StackPanel>

                <!-- Mode -->
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="500"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Mode" VerticalAlignment="Center" Foreground="{StaticResource SubTextBrush}"/>

                    <ComboBox x:Name="ModeCombo"
                                Width="300"
                                Height="36"
                                Margin="0,6,0,0"
                                SelectionChanged="ModeCombo_SelectionChanged">

                        <!-- Dark dropdown fixes -->
                        <ComboBox.Resources>

                            <!-- Dropdown item text + background -->
                            <Style TargetType="{x:Type ComboBoxItem}">
                                <Setter Property="Foreground" Value="#F2F2F2"/>
                                <Setter Property="Background" Value="#1F1F1F"/>
                                <Setter Property="Padding" Value="10,6"/>
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                <Style.Triggers>
                                    <Trigger Property="IsHighlighted" Value="True">
                                        <Setter Property="Background" Value="#2D2D2D"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#2B579A"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>

                        </ComboBox.Resources>

                    </ComboBox>
                </Grid>

                <!-- Font (added below Mode) -->
                <Grid Grid.Row="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="500"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Font" VerticalAlignment="Center" Foreground="{StaticResource SubTextBrush}"/>

                    <ComboBox x:Name="FontCombo"
                              Width="280"
                              Height="36"
                              Margin="0,6,0,0"
                              VerticalAlignment="Top"
                              SelectionChanged="FontCombo_SelectionChanged"
                              ItemsSource="{x:Static Fonts.SystemFontFamilies}">
                        <ComboBox.Resources>
                            <Style TargetType="{x:Type ComboBoxItem}">
                                <Setter Property="Foreground" Value="#F2F2F2"/>
                                <Setter Property="Background" Value="#1F1F1F"/>
                                <Setter Property="Padding" Value="10,6"/>
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                <Style.Triggers>
                                    <Trigger Property="IsHighlighted" Value="True">
                                        <Setter Property="Background" Value="#2D2D2D"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#2B579A"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ComboBox.Resources>
                    </ComboBox>
                </Grid>

                <!-- Save Folder -->
                <Grid Grid.Row="4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="110"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Save to" VerticalAlignment="Center" Foreground="{StaticResource SubTextBrush}"/>

                    <TextBox x:Name="FolderText" Grid.Column="1"/>

                    <Button Grid.Column="2"
                            Style="{StaticResource SecondaryButton}"
                            Content="Browse..."
                            Margin="10,0,0,0"
                            Click="Browse_Click"/>
                </Grid>

                <!-- Capture -->
                <Button Grid.Row="6"
                        Style="{StaticResource PrimaryButton}"
                        Content="Capture Now"
                        Height="42"
                        Click="CaptureNow_Click"/>

                <!-- Status -->
                <TextBlock x:Name="StatusText"
                           Grid.Row="8"
                           Foreground="{StaticResource SubTextBrush}"
                           TextWrapping="Wrap"/>
            </Grid>
        </Border>
    </Grid>
</Window>
